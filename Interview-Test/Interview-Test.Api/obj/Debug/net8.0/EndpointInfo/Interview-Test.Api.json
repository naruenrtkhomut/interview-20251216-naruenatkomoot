{
  "openapi": "3.0.1",
  "info": {
    "title": "Interview-Test.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/User/GetUsers": {
      "get": {
        "tags": [
          "User"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/User/GetUserById/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/User/CreateUser": {
      "post": {
        "tags": [
          "User"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UserModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UserModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PermissionModel": {
        "required": [
          "permission"
        ],
        "type": "object",
        "properties": {
          "permissionId": {
            "type": "integer",
            "format": "int64"
          },
          "permission": {
            "minLength": 1,
            "type": "string"
          },
          "role": {
            "$ref": "#/components/schemas/RoleModel"
          }
        },
        "additionalProperties": false
      },
      "RoleModel": {
        "required": [
          "roleId",
          "roleName"
        ],
        "type": "object",
        "properties": {
          "roleId": {
            "type": "integer",
            "format": "int32"
          },
          "roleName": {
            "minLength": 1,
            "type": "string"
          },
          "permissions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PermissionModel"
            },
            "nullable": true
          },
          "userRoleMappings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserRoleMappingModel"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserModel": {
        "required": [
          "userId",
          "username",
          "userProfile",
          "userRoleMappings"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "minLength": 1,
            "type": "string"
          },
          "username": {
            "minLength": 1,
            "type": "string"
          },
          "userProfile": {
            "$ref": "#/components/schemas/UserProfileModel"
          },
          "userRoleMappings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserRoleMappingModel"
            }
          }
        },
        "additionalProperties": false
      },
      "UserProfileModel": {
        "required": [
          "firstName",
          "lastName",
          "user"
        ],
        "type": "object",
        "properties": {
          "profileId": {
            "type": "string",
            "format": "uuid"
          },
          "firstName": {
            "minLength": 1,
            "type": "string"
          },
          "lastName": {
            "minLength": 1,
            "type": "string"
          },
          "age": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "user": {
            "$ref": "#/components/schemas/UserModel"
          }
        },
        "additionalProperties": false
      },
      "UserRoleMappingModel": {
        "type": "object",
        "properties": {
          "userRoleMappingId": {
            "type": "string",
            "format": "uuid"
          },
          "user": {
            "$ref": "#/components/schemas/UserModel"
          },
          "role": {
            "$ref": "#/components/schemas/RoleModel"
          }
        },
        "additionalProperties": false
      }
    }
  }
}